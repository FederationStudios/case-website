<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Justice Advocate General</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Case List</h1>
        <marquee class="title">Justice Advocate General</marquee>
        
        <form action="/" method="GET">
            <input type="text" name="search" placeholder="Search by Case ID or Case Status">
            <button type="submit">Search</button>
        </form>
        

        <table>
            <thead>
                <tr>
                    <th>Case ID</th>
                    <th>Offense</th>
                    <th>Division</th>
                    <th>Status</th>
                    <th>Judges Assigned</th>
                    <th>Judges Username</th>
                    <th>Submitted Date</th>
                </tr>
            </thead>
            <tbody>
                <% if (cases.length === 0) { %>
                    <tr>
                        <td colspan="7">No cases found.</td>
                    </tr>
                <% } else { %>
                    <% cases.forEach(function(item) { %>
                        <tr>
                            <td><%= item.case_id %></td>
                            <td><%= item.offense %></td>
                            <td><%= item.division %></td>
                            <td><%= item.case_status %></td>
                            <td><%= item.judges_assigned ? 'Yes' : 'No' %></td>
                            <td><%= item.judges_username %></td>
                            <td><%= new Date(item.submission_date).toDateString() %></td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>            
        </table>
    </div>
</body>
</html>
